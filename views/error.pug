extends layout

block styles
  link(rel="stylesheet" href="/stylesheets/pages/error.css")

block content
  .dashboard
    .container.py-xl
      .error-page.animate-fade-in
        .error-icon
          svg(width="64" height="64" viewBox="0 0 24 24" fill="none")
            path(d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round")
        
        h1.error-title Error #{status}
        p.error-message #{message}
        
        if error
          .error-details
            pre.error-stack #{error}
        
        .error-actions
          a.button.button-primary(href="/")
            svg.icon(viewBox="0 0 20 20")
              path(d="M10.707 2.293a1 1 0 00-1.414 0l-7 7a1 1 0 001.414 1.414L4 10.414V17a1 1 0 001 1h2a1 1 0 001-1v-2a1 1 0 011-1h2a1 1 0 011 1v2a1 1 0 001 1h2a1 1 0 001-1v-6.586l.293.293a1 1 0 001.414-1.414l-7-7z" fill="currentColor")
            span Return Home

